import sys
import time
import os

def print_colored_text(text, color, delay=0.04):
    """Выводит текст по одной букве заданным цветом с заданной задержкой."""
    color_code = color
    reset = "\033[0m"  # Reset color code

    for char in text:
        sys.stdout.write(color_code + char)
        sys.stdout.flush()
        time.sleep(delay)

    sys.stdout.write(reset)  # Reset color after the whole text is printed

def print_lyrics():
    """Выводит текст песни."""
    sad_color = "\033[38;5;60m"  # A desaturated blue/gray color for "sad"

    print_colored_text("Прости мне, милая, прости", sad_color, delay=0.04)
    print()
    time.sleep(0.5)

    print_colored_text("Все обещания спасти", sad_color, delay=0.04)
    print()
    time.sleep(0.5)

    print_colored_text("Легкую дрожь холодных рук", sad_color, delay=0.04)
