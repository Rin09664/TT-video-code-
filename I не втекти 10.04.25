import time
import sys
import threading
import os

def print_blue(text, delay=0.04):
  """Выводит текст по одной букве синим цветом с заданной задержкой."""
  color = "\033[34m"  # Blue color code
  reset = "\033[0m"
  for char in text:
      sys.stdout.write(color + char)
      sys.stdout.flush()
      time.sleep(delay)
  sys.stdout.write(reset) # Reset color after the whole text is printed


