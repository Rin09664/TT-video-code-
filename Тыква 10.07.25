    colored_pumpkin = orange + pumpkin + reset
    print(colored_pumpkin)


try:
    frame_number = 0
    while True:
        clear_console()
        print_colored_pumpkin(frame_number)
        time.sleep(0.3)
        frame_number = (frame_number + 1) % 4 # 4 кадра для анимации
except KeyboardInterrupt:
    print("\nАнимация остановлена.")
