import time
import sys
import os
import threading  # Импорт threading

def print_pink(text, delay=0.04):
    """Выводит текст розовым цветом побуквенно с задержкой."""
    PINK = "\033[95m"  # Код ANSI для розового цвета
    RESET = "\033[0m"  # Код ANSI для сброса цвета

    for char in text:
        sys.stdout.write(PINK + char + RESET)
        sys.stdout.flush()
        time.sleep(delay)
    print()  

